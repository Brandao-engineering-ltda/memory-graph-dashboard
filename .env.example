# Memory Graph Dashboard Environment Configuration

# Memory Data Configuration
# Path to your memory files (absolute path recommended)
MEMORY_DATA_PATH=/home/user/.openclaw/workspace/memory

# Memory file patterns to analyze (comma-separated)
MEMORY_FILE_PATTERNS=*.md,*.txt

# Graph Configuration
# How often to rebuild the knowledge graph (milliseconds)
GRAPH_REBUILD_INTERVAL=300000

# Maximum entities to process in a single update
MAX_ENTITIES_PER_UPDATE=1000

# Search Configuration
# Maximum search results to return
SEARCH_MAX_RESULTS=50

# Enable semantic search (requires embeddings)
ENABLE_SEMANTIC_SEARCH=true

# Search result ranking weights
SEARCH_RECENCY_WEIGHT=0.2
SEARCH_RELEVANCE_WEIGHT=0.8

# Analytics Configuration
# How far back to analyze trends (days)
ANALYTICS_HISTORY_DAYS=30

# Enable AI-powered insights
ENABLE_AI_INSIGHTS=true

# UI Configuration
# Default theme (dark/light)
DEFAULT_THEME=dark

# Enable animations and transitions
ENABLE_ANIMATIONS=true

# Graph visualization settings
GRAPH_PHYSICS_ENABLED=true
GRAPH_MAX_NODES=500

# Performance Configuration
# Enable caching for better performance
ENABLE_CACHING=true

# Cache duration in seconds
CACHE_DURATION=300

# Development Configuration (for development only)
# Enable debug logging
DEBUG_LOGGING=false

# Enable development tools
DEV_TOOLS_ENABLED=false